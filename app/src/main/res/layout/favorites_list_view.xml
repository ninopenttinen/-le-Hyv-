<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/favorite_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fav_list_img_view"
            android:layout_width="91dp"
            android:layout_height="91dp"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fav_label_view"
        android:layout_width="182dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/fav_recipe_name"
        app:layout_constraintStart_toEndOf="@+id/favorite_card_view"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fav_actions_button"
        android:layout_width="69dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="favActionClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fav_label_view"
        app:layout_constraintTop_toTopOf="parent"


        app:srcCompat="@drawable/ic_round_more_vert_24" />

</androidx.constraintlayout.widget.ConstraintLayout>